@{
    ViewData["Title"] = "Home Page";
}
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<Mvc_Project.Models.Aankoop>


<div class="container shadow-lg p-3 mb-5 bg-body-tertiary rounded text-center">
    @if (HttpContextAccessor.HttpContext.Session.GetString("GebuikersNaam") != null)
    {
        <h1>Welkome, @HttpContextAccessor.HttpContext.Session.GetString("GebruikersNaam")</h1>
    }
    <div class="row border">
        <div class="col">
            <h1>Album</h1>
            <div class="container shadow-sm p-3 mb-5 bg-body-tertiary rounded text-start">
                <div class="row">
                    <div class="col">
                        <h2>Col 1</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h2>Col 2</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row border p-2">
        <div class="col">
            <h1>Aankoop aanvragen</h1>
            <div class="container pt-3">
                <a class="btn btn-primary btn-lg" href="#" role="button" onclick="window.location.href='@Url.Action("Create", "Aankoop")'">Aankoop aanvragen</a>
            </div>
        </div>
        <div class="col">
            <h1>Aangevraagde aankopen</h1>
            <div class="container pt-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().NaamAanvrager.Voornaam)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().NaamAanvrager.Naam)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NaamAanvrager.Voornaam)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NaamAanvrager.Naam)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AankoopId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.AankoopId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.AankoopId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
